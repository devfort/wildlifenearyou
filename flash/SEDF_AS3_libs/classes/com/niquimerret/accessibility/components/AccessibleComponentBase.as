package com.niquimerret.accessibility.components {	import com.niquimerret.accessibility.Access;			import flash.display.Sprite; 		/**	 * @class AccessibleComponentBase.as	 * @namespace com.niquimerret.accessibility.components	 * @author Niqui Merret	 * @version 1.0	 * @date Aug 29, 2008	 * @description	 * @usage	 * NOTE:	 * TODO:	 *	 */	public class AccessibleComponentBase extends Sprite 	{		protected var mLabel : String;		protected var mDescription : String;				public function AccessibleComponentBase (pLabel : String,  pDescription : String = "")		{						mLabel = pLabel;			mDescription = pDescription;						setAccLabel();					}								/**		*********************************************************************************************************************************************************		* public		*********************************************************************************************************************************************************		*/						public function setLabel (pLabel : String = "") : void		{			mLabel = pLabel;			setAccLabel();		}				public function setDescription (pDescription : String = "") : void		{			mDescription = pDescription;			setAccLabel();		}						/**		*********************************************************************************************************************************************************		* protected		*********************************************************************************************************************************************************		*/								protected function setAccLabel () : void		{			Access.getInstance().setAccessInfo(this, mLabel, mDescription);		}			}}