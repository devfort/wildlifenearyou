package com.supereveildevfort.nov2008.profilepicture.testcases {	import com.supereveildevfort.nov2008.profilepicture.ui.ElementsPanel;		import com.supereveildevfort.nov2008.profilepicture.ui.buttons.ElementButton;			import flash.events.Event;		import br.com.stimuli.loading.BulkErrorEvent;			import com.supereveildevfort.nov2008.profilepicture.data.ImageData;			import br.com.stimuli.loading.BulkProgressEvent;		import br.com.stimuli.loading.BulkLoader;			import flash.display.Sprite;		import com.supereveildevfort.nov2008.profilepicture.model.FacialElements; 	/**	 * @class TestImageData.as	 * @namespace com.supereveildevfort.nov2008.profilepicture.testcases.TestImageData	 * @author Niqui Merret	 * @version 1.0	 * @date Nov 24, 2008	 * @description	 * @usage	 * NOTE:	 * TODO:	 *	 */	public class TestImageData extends Sprite 	{		private var mBulkLoader : BulkLoader;				public function TestImageData () 		{						trace("loading XML");						mBulkLoader = new BulkLoader("testImageData");            mBulkLoader.add("../../xml/profileimages.xml");        	mBulkLoader.addEventListener(BulkProgressEvent.COMPLETE, onAllItemsLoaded);        	mBulkLoader.addEventListener(BulkErrorEvent.ERROR, onLoadError);    		mBulkLoader.start();    				}				private function onAllItemsLoaded (e : BulkProgressEvent) : void		{						trace("XML loaded");			//parse XML						var imageXML : XML = mBulkLoader.getXML("../../xml/profileimages.xml");			ImageData.getInstance().parseXML(imageXML);			ImageData.getInstance().addEventListener(Event.COMPLETE, onLoadingComplete);		}				private function onLoadingComplete (e : Event) : void		{						addChild(ImageData.getInstance().faces.elements[0].image);			addChild(ImageData.getInstance().mouths.elements[0].image);			addChild(ImageData.getInstance().noses.elements[0].image);			addChild(ImageData.getInstance().cheeks.elements[0].image);			addChild(ImageData.getInstance().eyes.elements[0].image);			addChild(ImageData.getInstance().hair.elements[0].image);			addChild(ImageData.getInstance().hairAccessories.elements[0].image);						/*			var elementButton : ElementButton = new ElementButton(ImageData.getInstance().hairAccessories.elements[0].title);			elementButton.setUp(ImageData.getInstance().hair.elements[0].image);			addChild(elementButton);			elementButton.y = 200;						 * 			 */			var elementsPanel : ElementsPanel = new ElementsPanel();			elementsPanel.setUp(ImageData.getInstance().hairAccessories);			addChild(elementsPanel);			elementsPanel.y = 400;					}		private function onLoadError (e : BulkErrorEvent) : void		{						trace(e.errors);					}				 	}}