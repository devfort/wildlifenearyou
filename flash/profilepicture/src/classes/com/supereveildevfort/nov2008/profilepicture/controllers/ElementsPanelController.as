package com.supereveildevfort.nov2008.profilepicture.controllers {	import com.supereveildevfort.nov2008.profilepicture.events.ElementEvent;		import com.supereveildevfort.nov2008.profilepicture.model.Element;		import com.supereveildevfort.nov2008.profilepicture.ui.ElementsPanel;		import com.supereveildevfort.nov2008.profilepicture.model.ProfileImages;			import flash.display.Sprite;		/**	 * @class ElementsPanelController.as	 * @namespace com.supereveildevfort.nov2008.profilepicture.controllers	 * @author Niqui Merret	 * @version 1.0	 * @date Nov 26, 2008	 * @description	 * @usage	 * NOTE:	 * TODO:	 *	 */	public class ElementsPanelController extends Sprite 	{		public var elementList : Array;		private var selectedElementPanel : Number = 0;				public function ElementsPanelController ()		{					}				public function setUp(pProfileImages : ProfileImages) : void		{			elementList = new Array();			var elementsPanel : ElementsPanel;			var element : Element;						//create all			for (var i : Number = 0; i < pProfileImages.faceareacategories.length; i++) 			{				for (var j : Number = 0; j < pProfileImages.faceareacategories[i].faceareas.length; j++) 				{										elementsPanel = new ElementsPanel();					elementsPanel.setUp(pProfileImages.faceareacategories[i].faceareas[j].faceparts);					elementsPanel.addEventListener(ElementEvent.FACEPART_SELECTED, onElementSelected);					elementsPanel.y = 10;										addChild(elementsPanel);					elementsPanel.visible = false;					element = new Element();					element.name = pProfileImages.faceareacategories[i].faceareas[j].name;					element.elementPanel = elementsPanel;					elementList.push(element);									}			}			}					public function activatePanel (pName : String) : ElementsPanel		{			elementList[selectedElementPanel].elementPanel.visible = false;						for (var i : Number = 0; i < elementList.length; i++) 			{				if (pName == elementList[i].name)				{					elementList[i].elementPanel.visible = true;					var sleectedElementsPanel : ElementsPanel = elementList[i].elementPanel;					selectedElementPanel = i;				}			}			return sleectedElementsPanel;		}				private function onElementSelected (e : ElementEvent) : void		{						dispatchEvent(new ElementEvent(ElementEvent.FACEPART_SELECTED, e.facePart));					}				}}