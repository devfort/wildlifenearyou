package com.supereveildevfort.nov2008.profilepicture.ui {	import com.supereveildevfort.nov2008.profilepicture.model.FacePart;		import com.supereveildevfort.nov2008.profilepicture.events.ElementEvent;		import com.niquimerret.events.InteractionEvent;		import com.supereveildevfort.nov2008.profilepicture.ui.buttons.ElementButton;			import flash.display.Sprite; 		/**	 * @class ElementsPanel.as	 * @namespace com.supereveildevfort.nov2008.profilepicture.ui	 * @author Niqui Merret	 * @version 1.0	 * @date Nov 24, 2008	 * @description	 * @usage	 * NOTE:	 * TODO:	 *	 */	public class ElementsPanel extends Sprite 	{		private var mElements : Array;		private var mElementButtons : Array;		/**		 *********************************************************************************************************************************************************		 * 		 * public		 * 		 *********************************************************************************************************************************************************		 */				public function setUp (pElements : Array) : void		{						mElements = pElements;				init();								}				/**		 *********************************************************************************************************************************************************		 *		 * private		 *  		 *********************************************************************************************************************************************************		 */		 		 			private function init() : void		{			mElementButtons = new Array();						var i : uint;			var len : uint = mElements.length;						var elementButton : ElementButton;									for (i = 0; i < len; i++) 			{								elementButton = new ElementButton(mElements[i].title);				elementButton.setUp(mElements[i].image);				addChild(elementButton);								elementButton.scaleX = 0.5;				elementButton.scaleY = 0.5;				elementButton.x = elementButton.width * i;								elementButton.addEventListener(InteractionEvent.CLICKED, onElementSelected);								mElementButtons.push(elementButton);							}		}				private function onElementSelected (e : InteractionEvent) : void		{						for (var i : Number = 0; i < mElementButtons.length; i++) 			{				if (mElementButtons[i] == e.currentTarget)				{					var facepart : FacePart = mElements[i];				}				}						dispatchEvent(new ElementEvent(ElementEvent.FACEPART_SELECTED, facepart));		}	}}