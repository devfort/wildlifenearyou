package com.supereveildevfort.nov2008.profilepicture.testcases {	import flash.display.Bitmap;			import com.supereveildevfort.nov2008.profilepicture.ui.PictureDisplay;			import br.com.stimuli.loading.BulkErrorEvent;		import br.com.stimuli.loading.BulkProgressEvent;		import br.com.stimuli.loading.BulkLoader;			import flash.display.Sprite; 		/**	 * @class TestDisplayArea.as	 * @namespace com.supereveildevfort.nov2008.profilepicture.testcases	 * @author Niqui Merret	 * @version 1.0	 * @date Nov 24, 2008	 * @description	 * @usage	 * NOTE:	 * TODO:	 *	 */	public class TestDisplayArea extends Sprite 	{		private var mBulkLoader : BulkLoader;		private var mPictureDisplay : PictureDisplay;		public function TestDisplayArea() 		{						mBulkLoader = new BulkLoader("testDisplayArea");	        mBulkLoader.add("../../images/hair_accessories.png");	        mBulkLoader.add("../../images/hair.png");	        mBulkLoader.add("../../images/eye.png");	        mBulkLoader.add("../../images/face.png");	    	mBulkLoader.addEventListener(BulkProgressEvent.COMPLETE, onAllItemsLoaded);	    	mBulkLoader.addEventListener(BulkErrorEvent.ERROR, onLoadError);			mBulkLoader.start();		}				private function onLoadError (e : BulkErrorEvent) : void		{		}		private function onAllItemsLoaded (e : BulkProgressEvent) : void		{			mPictureDisplay = new PictureDisplay();			addChild(mPictureDisplay);						var facetest : Bitmap = new Bitmap();			facetest = mBulkLoader.getBitmap("../../images/face.png");					}	}}