package com.supereveildevfort.nov2008.profilepicture.ui.buttons {	import flash.filters.DropShadowFilter;		import flash.text.TextFormat;		import flash.display.SpreadMethod;		import flash.geom.Matrix;		import flash.display.GradientType;		import flash.display.Sprite;			import com.supereveildevfort.nov2008.profilepicture.ui.ArialText;		import com.niquimerret.accessibility.components.AccessButton; 		/**	 * @class SaveButton.as	 * @namespace com.supereveildevfort.nov2008.profilepicture.ui.buttons	 * @author Niqui Merret	 * @version 1.0	 * @date Nov 26, 2008	 * @description	 * @usage	 * NOTE:	 * TODO:	 *	 */	public class DefaultButton extends AccessButton 	{		private var mDisplay : ArialText;		private var mBG : Sprite;		private var mUpFormat : TextFormat;		private var mOverFormat : TextFormat;		public function DefaultButton (pLabel : String, pDescription : String = "")		{			super(pLabel, pDescription);		}						override protected function init() : void		{			super.init();						mOverFormat = new TextFormat(null, null, 0xfff568, true);			mUpFormat = new TextFormat(null, null, 0xFFFFFF, true);						mDisplay = new ArialText(mLabel);			mDisplay.autoWidth = true;			mDisplay.autoHeight = true;			mDisplay.x = 2;			mDisplay.y = 1;						mBG = new Sprite();			mBG.graphics.lineStyle(1, 0x2356d6, 1);						var matr : Matrix = new Matrix();			matr.createGradientBox(mDisplay.width + 5, mDisplay.height + 5, Math.PI/2, 0, 0);			mBG.graphics.beginGradientFill(GradientType.LINEAR, [0x53a1f2, 0x0222c3], [1, 1], [0, 255], matr, SpreadMethod.PAD);  			mBG.graphics.drawRect(0, 0, mDisplay.width + 5, mDisplay.height + 5);			mBG.graphics.endFill();			addChild(mBG);						addChild(mDisplay);			mDisplay.textFormat = mUpFormat;			var ds : DropShadowFilter = new DropShadowFilter(1, 45, 0x000000, 0.5, 1, 1);			mDisplay.filters = [ds];					}						override protected function focusInAction () : void		{			mDisplay.textFormat = mOverFormat;		}						override protected function focusOutAction () : void		{			mDisplay.textFormat = mUpFormat;		}					}		}