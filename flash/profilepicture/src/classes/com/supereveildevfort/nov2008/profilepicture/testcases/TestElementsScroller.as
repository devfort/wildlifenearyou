package com.supereveildevfort.nov2008.profilepicture.testcases {	import com.supereveildevfort.nov2008.profilepicture.ui.ElementsPanel;		import com.supereveildevfort.nov2008.profilepicture.ui.ElementsScroller;			import flash.events.Event;			import com.supereveildevfort.nov2008.profilepicture.data.ImageData;			import br.com.stimuli.loading.BulkErrorEvent;		import br.com.stimuli.loading.BulkProgressEvent;		import br.com.stimuli.loading.BulkLoader;			import flash.display.Sprite; 		/**	 * @class TestElementsScroller.as	 * @namespace com.supereveildevfort.nov2008.profilepicture.testcases	 * @author Mazz with Niqui Merret	 * @version 1.0	 * @date Nov 25, 2008	 * @description	 * @usage	 * NOTE:	 * TODO:	 *	 */	public class TestElementsScroller extends Sprite 	{		private var mBulkLoader : BulkLoader;		private var mElementsScroller : ElementsScroller;		public function TestElementsScroller () 		{						trace("loading XML");						mBulkLoader = new BulkLoader("testImageData");            mBulkLoader.add("../../xml/profileimages.xml");            //mBulkLoader.add("/faces/profile-images.xml");        	mBulkLoader.addEventListener(BulkProgressEvent.COMPLETE, onAllItemsLoaded);        	mBulkLoader.addEventListener(BulkErrorEvent.ERROR, onLoadError);    		mBulkLoader.start();		}				private function onLoadError (event : BulkErrorEvent) : void		{			trace("Error");		}		private function onAllItemsLoaded (event : BulkProgressEvent) : void		{			trace("XML loaded");			//parse XML						var imageXML : XML = mBulkLoader.getXML("../../xml/profileimages.xml");			//var imageXML : XML = mBulkLoader.getXML("/faces/profile-images.xml");			ImageData.getInstance().parseXML(imageXML);			ImageData.getInstance().addEventListener(Event.COMPLETE, onLoadingComplete);								}				private function onLoadingComplete (event : Event) : void		{						mElementsScroller = new ElementsScroller();			addChild(mElementsScroller);						var elementPanelHolder : Sprite = new Sprite();			addChild(elementPanelHolder);						var elementsPanel : ElementsPanel = new ElementsPanel();			elementsPanel.setUp(ImageData.getInstance().profileImages.faceareacategories[0].faceareas[0].faceparts);			addChild(elementsPanel);			elementsPanel.y = 200;						mElementsScroller.x = elementPanelHolder.x = 20;			mElementsScroller.y = 200;			elementPanelHolder.y = 210;						mElementsScroller.elementsPanel = elementsPanel;					}	}}